# DecentralBet Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/decentralbet?authSource=admin
MONGODB_DB_NAME=decentralbet

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Ethereum/Blockchain Configuration
ETHEREUM_RPC_URL=http://localhost:8545
ETHEREUM_NETWORK=localhost
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
PRIVATE_KEY=your-private-key-here

# Smart Contract Addresses (Update after deployment)
CONTRACT_FACTORY_ADDRESS=0x...
CONTRACT_USDC_ADDRESS=0x...

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# CORS
CORS_ORIGIN=http://localhost:3000

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_PATH=uploads/

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Admin Configuration
ADMIN_EMAIL=admin@decentralvote.com
ADMIN_PASSWORD=SecureAdminPass123!

# Warning: Never commit your actual .env file to version control!
# Copy this file to .env and update with your actual values
