# DecentralBet Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
ETHEREUM_NETWORK=localhost
ETHEREUM_RPC_URL=http://127.0.0.1:8545
CHAIN_ID=1337

# For Sepolia deployment (get from faucet):
# ETHEREUM_NETWORK=sepolia
# ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/M_mrbBEw-ctKxBuux_g0g
# CHAIN_ID=11155111
# PRIVATE_KEY=your_private_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
SOCKET_CORS_ORIGIN=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Local development (using Docker)
MONGODB_URI=mongodb://localhost:27017/decentralbet
MONGODB_DB_NAME=decentralbet
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_CHAIN_ID=1337
NEXT_PUBLIC_ETHEREUM_RPC_URL=http://127.0.0.1:8545

# =============================================================================
# SMART CONTRACT ADDRESSES (auto-populated after deployment)
# =============================================================================
PREDICTION_MARKET_ADDRESS=
MOCK_USDC_ADDRESS=
PREDICTION_MARKET_FACTORY_ADDRESS=

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PREFIX=/api/v1
API_VERSION=1.0.0

# =============================================================================
# OPTIONAL: PRODUCTION/CLOUD CONFIGURATION
# =============================================================================
# Azure Configuration (for production deployment)
# AZURE_RESOURCE_GROUP=rg-aks-final
# ACR_NAME=decentralbetacr2024

